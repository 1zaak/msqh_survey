<%= form_for @changeset, @action, [class: "ui form"], fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="field">
    <%= label f, :facility_name, class: "control-label" %>
    <%= text_input f, :facility_name, class: "form-control" %>
    <%= error_tag f, :facility_name %>
  </div>

  <div class="field">
    <%= label f, :sector, class: "control-label" %>
    <%= text_input f, :sector, class: "form-control" %>
    <%= error_tag f, :sector %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "ui teal submit button" %>
  </div>
<% end %>
